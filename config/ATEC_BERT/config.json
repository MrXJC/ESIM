{
    "n_gpu": 1,
    "seed" : 28,
    "processor": {
        "type": "ATECProcessor",
        "args": {
            "data_name":  "ATEC",
            "embed_path": "embedding/w2v.model",
            "user_dict":  "user_dict.txt",
            "vocab_path": "atec_nlp_sim_train.csv",
            "data_path":  "atec_nlp_sim_train.csv",
            "stop_word":  "",
            "test_split": 0.2,
            "query_max_len": 25,
            "target_max_len": 25
        }
    },

    "data_loader": {
        "type": "DataLoader",
        "args": {
            "batch_size": 2048,
            "shuffle": true,
            "validation_split": 0.1,
            "num_workers": 2
        }
    },

    "arch": {
        "type": "ESIM",
        "args": {
            "embed_dim"    : 300,
            "hidden_size"  : 100,
            "linear_size"  : 64,
            "dropout"      : 0.75
        }
    },

    "optimizer": {
        "type": "Adam",
        "args":{
            "lr": 0.00075,
            "weight_decay": 1e-5,
            "amsgrad": true
        }
    },

    "lr_scheduler": {
        "type": "StepLR",
        "args": {
            "step_size": 5,
            "gamma": 0.5
        }
    },

    "loss": {
        "type": "cross_entropy_loss",
        "args": {
            "weights": [0.223, 1]
        }
    },

    "metrics": [
        "F1","acc"
    ],

    "trainer": {
        "epochs": 50,

        "save_dir": "saved/",
        "save_period": 1,
        "verbosity": 2,
        
        "monitor": "max val_F1",
        "early_stop": 5,
        "gradient_accumulation_steps": 1,
        "tensorboardX": true
    }
}
